<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:popupTheme="@style/AppTheme"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    app:contentInsetRight="0dp"
    app:contentInsetEnd="0dp"
    android:id="@+id/vertical_slider_indicator"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:minHeight="65dp"
    android:padding="0dp">

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/color_white_2"/>

    <ImageView
        android:id="@+id/vertical_slider_indicator_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:contentDescription="@string/description_ico_empty_white_circle"
        android:src="@drawable/ico_empty_white_circle" />

</RelativeLayout>