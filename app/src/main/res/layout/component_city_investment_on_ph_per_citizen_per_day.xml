<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/component_public_health_investment_per_citizen_per_day_container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:visibility="gone">

    <LinearLayout
        android:id="@+id/component_public_health_investment_per_citizen_per_day_large_v"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="0dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/component_public_health_investment_per_citizen_per_day_value_large_v"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center_vertical|center_horizontal"
            android:drawableLeft="@drawable/ico_person_colorful"
            android:drawableStart="@drawable/ico_person_colorful"
            android:drawablePadding="20dp"
            android:textStyle="bold"
            android:textColor="@color/color_green_blue_3"
            android:textSize="35sp"
            android:text="@string/money_default_value"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/component_public_health_investment_per_citizen_per_day_header_msg_large_v"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:text="@string/component_investment_per_citizen_per_day_large_v"
                android:textColor="@color/color_black_3"/>

            <include layout="@layout/component_gray_line"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="105dp"
                android:layout_marginStart="105dp"
                android:layout_marginRight="105dp"
                android:layout_marginEnd="105dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/component_public_health_investment_per_citizen_per_day_small_v"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:weightSum="8"
        android:visibility="gone"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ico_person_colorful"
            android:contentDescription="@string/description_ico_value_per_citizen_per_day" />

        <TextView
            android:id="@+id/component_public_health_investment_per_citizen_per_day_header_msg_small_v"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:textSize="14sp"
            android:gravity="start"
            android:text="@string/component_investment_per_citizen_per_day_small_v"
            android:textColor="@color/color_black_3"/>

        <TextView
            android:id="@+id/component_public_health_investment_per_citizen_per_day_value_small_v"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/color_green_blue_3"
            android:textSize="20sp"
            android:text="@string/money_default_value"/>

    </LinearLayout>

</LinearLayout>