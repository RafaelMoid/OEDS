<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/component_list_shareable_item_container"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:paddingBottom="1dp"
    android:weightSum="10"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:baselineAligned="false"
    android:background="@drawable/background_shadow">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_height="match_parent"
        android:background="@drawable/background_white_squared_gray_borders">

        <ImageView
            android:id="@+id/component_list_shareable_item_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/description_img_shareable_item"
            android:src="@drawable/placeholder_image"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:background="@color/color_gray_3">

        <ImageView
            android:id="@+id/component_list_shareable_item_btn_delete"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:padding="8dp"
            android:src="@drawable/ico_delete_white"
            android:background="@drawable/background_circle_red"
            android:contentDescription="@string/description_ico_btn_delete" />

    </FrameLayout>

</LinearLayout>