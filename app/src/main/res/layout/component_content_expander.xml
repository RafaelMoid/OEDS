<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:popupTheme="@style/AppTheme"
    android:id="@+id/component_content_expander"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:padding="0dp">

    <LinearLayout
        android:id="@+id/component_content_expander_header"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        android:background="@color/color_white">

        <TextView
            android:id="@+id/component_content_expander_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:background="@color/color_white"
            android:textColor="@color/color_green_blue_4"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text=""/>

        <ImageView
            android:id="@+id/component_content_expander_btn_toggle_content"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:padding="13dp"
            android:src="@drawable/ico_arrow_down_blue_green"
            android:background="@color/color_white"
            android:contentDescription="@string/description_arrow_content_expander"/>

    </LinearLayout>

    <TextView
        android:id="@+id/component_content_expander_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:autoLink="web"
        android:text=""
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="@color/color_white"
        android:background="@color/color_green_blue_3"/>

    <View
        android:id="@+id/component_content_expander_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/color_green_blue_4"/>

</LinearLayout>