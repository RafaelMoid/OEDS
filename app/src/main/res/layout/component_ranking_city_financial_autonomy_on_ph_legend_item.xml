<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_gray_gradient">

    <TextView
        android:id="@+id/component_chart_legend_ranking_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="@color/color_black_3"
        android:text=""
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/component_chart_legend_ranking_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:maxLines="3"
        android:textSize="10sp"
        tools:ignore="SmallSp"
        android:text=""/>

    <TextView
        android:id="@+id/component_chart_legend_ranking_name_extra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="11sp"
        tools:ignore="SmallSp"
        android:text="" />

</LinearLayout>