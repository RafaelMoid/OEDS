<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/component_social_network_picker"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_rectangle_black_transparent_no_borders">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="end"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:src="@drawable/ico_triangle_white_dialog_balloon"
        android:contentDescription="@string/description_ico_share"/>

    <!-- Content -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@drawable/background_white_rounded_borders">

        <!-- Buttons to select a social network -->
        <LinearLayout
            android:id="@+id/component_social_network_picker_social_buttons"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/sharing_popup_select_social_network"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/color_black_3"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:weightSum="3"
                android:baselineAligned="false">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/component_social_network_picker_facebook"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ico_facebook_white_fill"
                        android:contentDescription="@string/description_ico_share"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/component_social_network_picker_email"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ico_email"
                        android:contentDescription="@string/description_ico_share"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/component_social_network_picker_twitter"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ico_twitter"
                        android:contentDescription="@string/description_ico_share"/>

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginTop="15dp"
                android:weightSum="2"
                android:baselineAligned="false">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/component_social_network_picker_whatsapp"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ico_whatsapp"
                        android:contentDescription="@string/description_ico_share"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/component_social_network_picker_messenger"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ico_messenger"
                        android:contentDescription="@string/description_ico_share"/>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Instructions of the sharing functionality -->
        <LinearLayout
            android:id="@+id/component_social_network_picker_sharing_instructions"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:weightSum="1"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="7dp"
                    android:paddingLeft="4dp"
                    android:paddingStart="4dp"
                    android:paddingRight="7dp"
                    android:paddingEnd="7dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:src="@drawable/ico_share_btn_white"
                    android:background="@drawable/background_circle_orange"
                    android:contentDescription="@string/description_ico_share"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/sharing_popup_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_black_3"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:text="@string/sharing_popup_instructions"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/color_gray_10"/>

            <Button
                android:id="@+id/component_social_network_picker_btn_start"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"
                android:background="@drawable/background_rectangle_orange_rounded_borders"
                android:textColor="@color/color_white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:text="@string/lbl_btn_start"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>