<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <layer-list>

            <item>

                <shape>

                    <gradient
                        android:angle="90"
                        android:startColor="@color/color_white"
                        android:endColor="@color/color_gray_1_2"
                        android:type="linear"/>

                    <stroke
                        android:width="1dp"
                        android:color="@color/color_gray_2"/>

                    <corners
                        android:radius="1dp"/>

                    <padding
                        android:bottom="3dp"
                        android:left="3dp"
                        android:right="3dp"
                        android:top="3dp"/>

                </shape>

            </item>

            <item
                android:top="5dp"
                android:left="10dp"
                android:right="10dp"
                android:bottom="5dp">

                <bitmap
                    android:gravity="right|center"
                    android:src="@drawable/ico_nice_dropdown"
                    android:alpha="0.07">

                </bitmap>

            </item>

        </layer-list>

    </item>

</selector>